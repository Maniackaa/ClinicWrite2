# ============================================
# Telegram Bot Configuration
# ============================================
# Токен бота от @BotFather
BOT_TOKEN=your_bot_token_here

# ID администраторов бота (через запятую, без пробелов)
# Пример: ADMIN_IDS=123456789,987654321
ADMIN_IDS=your_admin_id_here

# ID группы/канала для уведомлений о заявках
GROUP_ID=your_group_id_here

# Часовой пояс (например: Europe/Moscow, UTC)
TIMEZONE=Europe/Moscow

# File ID прайса для отправки по ID (опционально, можно оставить пустым)
PRICE_FILE_ID=

# ============================================
# PostgreSQL Database Configuration
# ============================================
# Название базы данных
POSTGRES_DB=clinic_db

# Хост базы данных (для Docker: db_postgres, для локального: localhost)
DB_HOST=db_postgres

# Порт базы данных
DB_PORT=5432

# Имя пользователя PostgreSQL
POSTGRES_USER=postgres

# Пароль пользователя PostgreSQL
POSTGRES_PASSWORD=your_postgres_password_here

# ============================================
# pgAdmin Configuration (для Docker)
# ============================================
# Email для входа в pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@example.com

# Пароль для входа в pgAdmin
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password_here
